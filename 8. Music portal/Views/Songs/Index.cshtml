@model IEnumerable<_8._Music_portal.Models.SongsModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Songs</h1>

<p>
    <a asp-action="Create">Create New Song</a>
</p>
<div>
    @foreach (var item in Model)
    {
        @if (item != null)
        {
            <div class="div2 ">
                <div>
                    <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                    <table class="teble">
                        <tr>
                            <td><p>@Html.DisplayNameFor(modelItem => item.Genre): </p></td>
                            <td><p> @Html.DisplayFor(modelItem => item.Genre.Name)</p></td>
                        <tr>
                            <td><p>@Html.DisplayNameFor(modelItem => item.Performer): </p></td>
                            <td><p> @Html.DisplayFor(modelItem => item.Performer.Name)</p></td>
                    </table>
                    <audio opacity="0" controls src='@Html.DisplayFor(modelItem => item.Track)'></audio>
                    @if (Context.Session.GetString("Login") == "Admin")
                    {
                        <div class="div1">
                            <a class="botton" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="botton" asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <a class="botton" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </div>
                    }
                </div>
            </div>
        }}
</div>
